#include <stdio.h>

int main( void )
{

  int original_number, encrypted_number, digit1, digit2, digit3, digit4;

  puts( "Enter a 4-digit number:" );
  scanf( "%d", original_number );

  digit_1 = original_number % / 1000;
  digit_2 = ( original_number % 1000 ) / 100;
  digit_3 = ( original_number % 100 ) / 10;
  digit_4 = original_number % 10;

  printf( "Digits: %d %d %d %d\n\n", digit_1, digit_2, digit_3, digit_4 );

}
