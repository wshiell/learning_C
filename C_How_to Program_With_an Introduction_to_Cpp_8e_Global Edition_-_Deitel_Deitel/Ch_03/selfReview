1. a) algorithm
   b) program control
   c) sequential, selection, iteration
   d) if-else
   e) block
   f) while
   g) counter controlled
   h) sentinel

2. x = x + 1;
   x += 1;
   ++x;
   x++;

3. a) variable *= 2;
   b) variable = variable * 2;
   c) if ( count > 10 ) {
        printf( "%d is greater than 10", count );
      }
   d) q = q % divisor;
      q %= divisor;
   e) printf( "%.2f", 123.4567 );
      The value printed is 123.46
   f) printf( "%.3f", 3.14159 );
      The value printed is 3.142

4. a) int sum, x;
   b) x = 1;
   c) sum = 0;
   d) sum += x;
   e) printf( "The sum is: %d", sum );

