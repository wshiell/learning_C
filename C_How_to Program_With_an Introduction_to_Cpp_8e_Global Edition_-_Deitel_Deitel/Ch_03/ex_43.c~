#include <stdio.h>

int main( void )
{
  int side1, side2, side3, x, y, z;
  
  puts( "Enter three integers, and I will determine whether they could ");
  puts( 'represent the sides of a triangle:' );
  scanf( "%d%d%d", &side1, &side2, &side3 );

  x = side1 + side2;
  y = side2 + side3;
  z = side3 + side1;

  if( x > side3 ) {
    if( y > side1 ) {
      if z > side2 ) {
      printf( "%s, ""The three integers represent sides of a triangle.\n");
    }
  }
  
}
