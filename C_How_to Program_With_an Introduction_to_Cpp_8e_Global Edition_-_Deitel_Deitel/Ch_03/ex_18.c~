#include <stdio.h>

int main ( void )
{

  int weeklyPay = 200, totalEarnings, grossSales;
  float commissionRate = .09;

  puts( "Enter sales in dollars (-1 to end):" );
  scanf( "%d", &grossSales );

  while ( grossSales != -1 ) {
    totalEarnings = weeklyPay + commissionRate * grossSales;
    printf( "Salary is: $%d", totalEarnings );

   puts( "Enter sales in dollars (-1 to end):" );
   scanf( "%d", &grossSales );
  }
}
