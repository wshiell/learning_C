#include <stdio.h>

int sumDigits(int number);

int main(void)
{
  int number;

  puts("Enter an integer:");
  scanf("%d", &number);

  printf("Sum of the digits of %d is %d: \n" number, sum = sumDigits(number);
}

int sumDigits(int number)
{
  int sum = 0;

  remainder = number % 10;
  quotient = number / 10;

  sum += remainder + sumDigits(quotient);
}

