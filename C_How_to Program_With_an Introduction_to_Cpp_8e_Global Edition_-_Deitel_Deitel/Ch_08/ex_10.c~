#include <stdio.h>
#include <string.h>

int main(void)
{
  int n;
  char string1[100], string2[50];

  puts("Enter two strings:");
  scanf("%s%s", string1, string2);

  puts("Enter the number of characters of string2 to append to string1:");
  scanf("%d", &n);

  printf("%s%s\n", "Concatenated string: ", strncat(string1, string2, n));
}
